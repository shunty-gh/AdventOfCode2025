{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET: Launch Active File",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "${file}"
            ],
            "cwd": "${workspaceFolder}/cs",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "AoC C#",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/cs/aoc2025.csproj",
        },

        {
            "name": "AoC Python",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/py"
        },

        {
            "name": "AoC Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "args": [
                "-t"
            ],
            "program": "${workspaceFolder}/go"
        }
    ]
}